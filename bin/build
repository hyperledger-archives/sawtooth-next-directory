set -e

TOP_DIR=$(cd $(dirname $(dirname $0)) && pwd)

usage() {

    cat << EOM
        Usage:
            $0 [-t] [-l] [-f] [-p] [-a]

        Options:
            -t           run unit and integration tests
            -l           lint source code
            -f           format python source (black)
            -p           build protobuf modules using docker containers
            -a           lint, tests in order
            -h           print help text
            
            
EOM

}


info() {
    echo -e "\033[0;36m\n[--- $1 ---]\n\033[0m"
}


while getopts hpltiaf opt;
do
    case $opt in
        h)
            usage
            exit 0
            ;;
        p)
            info "Building Protobuf modules"
            docker build . -f tests/Dockerfile -t rbac-test-env
            docker run --rm -v $(pwd):/project/tmobile-rbac rbac-test-env bin/protogen
            ;;
        t)
            info "Running tests"
            $TOP_DIR/bin/run_docker_test $TOP_DIR/tests/docker-compose.yaml
            ;;
        l)
            info "Running lint"
            $TOP_DIR/bin/run_lint
            ;;
        f)
            info "Running formatter"
            $TOP_DIR/bin/run_python_formatter
            ;;
        i)
            info "Running tests"
            $TOP_DIR/bin/run_docker_test $TOP_DIR/tests/docker-compose.yaml
            ;;
        a)
            docker build . -f tests/Dockerfile -t rbac-test-env
            info "Running lint"
            docker run --rm -v $(pwd):/project/tmobile-rbac rbac-test-env bin/run_lint
            info "Running tests"
            $TOP_DIR/bin/run_docker_test $TOP_DIR/tests/docker-compose.yaml
            ;;
        \?)
            usage
            exit 1
            ;;
    esac
done

if [ $OPTIND -eq 1 ]; then
    usage
    exit 1
fi
