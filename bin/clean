TOP_DIR=$(cd $(dirname $(dirname $0)) && pwd)

if [ "$1" ]; then
    WHERE="$1"
else
    WHERE="$PWD"
fi

find "$WHERE" \
    -name '__pycache__' -delete -print \
    -o \
    -name '*.pyc' -delete -print

docker system prune -a
