set -e

TOP_DIR=$(cd $(dirname $(dirname $0)) && pwd)

usage() {

    cat << EOM

        Usage:
            $0 [-p --persist] [-d --dev] [-b --build]

        Options:
                               start from genesis (no data) [default]
            -p --persist       start with persistent data
            -d --dev           start in development mode (local files)
            -b --build         (re)build docker images before starting

EOM

}

if [[ "$1" =~ ^((-{1,2})([Hh]$|[Hh][Ee][Ll][Pp])|)$ ]]; then
    usage; exit 1
else
while [[ $# -gt 0 ]]; do
    opt="$1"
    shift;
    case "$opt" in
    "-h"|"--help"       ) usage; exit 0;;
    "-b"|"--build"      ) BUILD=1;;
    "-p"|"--persist"    ) PERSIST=1;;
    "-d"|"--dev"        ) DEV=1;;
    *                   ) echo "ERROR: Invalid option: \""$opt"\"" >&2
                            usage
                            exit 1;;
    esac
done
fi

CMD="docker-compose -f docker-compose.yaml"

if [[ "$PERSIST" == "1" ]]; then
    CMD="$CMD -f docker-persist.yaml"
fi
if [[ "$DEV" == "1" ]]; then
    CMD="$CMD -f docker-dev.yaml"
fi
CMD="$CMD up"
if [[ "$BUILD" == "1" ]]; then
    CMD="$CMD --build"
fi

echo $CMD
$CMD
