set -e

TOP_DIR=$(cd $(dirname $(dirname $0)) && pwd)

format() {

    files="`find $1 -name \*.py | grep -v protobuf`"
    echo "$1"
    black $files || error=1
    return $error

}

export PYTHONPATH=$TOP_DIR

format rbac/addressing || ret_val=1
format rbac/common/sawtooth || ret_val=1
format rbac/ledger_sync || ret_val=1
format rbac/processor || ret_val=1
format rbac/server || ret_val=1
format rbac/transaction_creation || ret_val=1
format tests || ret_val=1

ret_val=0

exit $ret_val
