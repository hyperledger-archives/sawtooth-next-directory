import logging
import os
import sys

TOP_DIR = os.path.dirname(os.path.dirname(os.path.realpath(__file__)))
sys.path.insert(0, TOP_DIR)

from rbac.providers.ldap.main import start_ldap_sync

ENV_VAR_MESSAGE_TARGET = "LDAP_DC"
MESSAGE_TARGET_KEY_LDAP = "provider_id"
MESSAGE_TARGET_VALUE_LDAP = os.getenv(ENV_VAR_MESSAGE_TARGET)

LOGGER = logging.getLogger(__name__)
LOGGER.level = logging.INFO
LOGGER.addHandler(logging.StreamHandler(sys.stdout))

if __name__ == '__main__':
    if MESSAGE_TARGET_VALUE_LDAP == "":
        LOGGER.warning("No message target found on the environment for outbound Ldap (key = %s). Disabling Ldap sync.",
                       ENV_VAR_MESSAGE_TARGET)
    else:
        start_ldap_sync()
