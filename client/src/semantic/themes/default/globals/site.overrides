/*******************************
        Global Overrides
*******************************/

body {
  -webkit-font-smoothing: antialiased;
}

body,
#root {
  height: 100%;
}

.clear {
  clear: both;
}

.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.cursor-pointer {
  cursor: pointer;
}

.dark {
  background: @darkBackground;
}

.contrast {
  background: @contrastBackground;
}

.flux {
  background: @darkBackground;
  background: linear-gradient(180deg, #6b00ff, #f7007d);
}

.flux:before {
  background: linear-gradient(180deg, #1d49df, #1be2b9);
  content: '';
  height: 100%;
  opacity: 0;
  position: absolute;
  transition: 1s ease opacity;
  width: 100%;
}

.interpolate:before {
  opacity: 1;
}

.avatar-palette-1 {
  background: @avatarPalette1;
  color: @avatarPalette1TextColor;
}

