.toast {
  border-radius: 1em !important;
  padding: 20px !important;
}

.toast.Toastify__toast--warning {
  color: #1d1e27;
}

@keyframes flux {
  0% { background-position: 50% 0%; }
  50% { background-position: 51% 100%; }
  100% { background-position: 50% 0%; }
}

@keyframes opacity {
  0% { opacity: 0; }
  100% { opacity: 1; }
}
